- form_for @user do |f|
  = f.error_messages
  %p
    = f.label :username
    %br= f.text_field :username
  %p  
    = f.label :name
    %br= f.text_field :name
  %p
    = f.label :password
    %br= f.text_field :password
  %p
    = f.label :password_confirmation
    %br= f.text_field :password_confirmation

  %p= submit_tag('Submit')
